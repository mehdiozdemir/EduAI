# Staging Environment Configuration
NODE_ENV=production
VITE_NODE_ENV=staging

# Application Information
VITE_APP_NAME=EduAI (Staging)
VITE_APP_VERSION=1.0.0-staging
VITE_APP_DESCRIPTION=AI-powered personalized education platform - Staging

# API Configuration
VITE_API_BASE_URL=https://staging-api.eduai.com
VITE_API_TIMEOUT=15000
VITE_RETRY_ATTEMPTS=2

# Feature Flags
VITE_FEATURE_OFFLINE_SUPPORT=true
VITE_FEATURE_SERVICE_WORKER=false
VITE_FEATURE_PUSH_NOTIFICATIONS=false
VITE_FEATURE_DARK_MODE=true
VITE_FEATURE_BETA_FEATURES=true

# Performance Configuration
VITE_CACHE_DURATION=60000
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=true

# Security
VITE_SECURE_COOKIES=true
VITE_CSRF_PROTECTION=true

# CDN and Assets
VITE_CDN_URL=https://staging-cdn.eduai.com
VITE_STATIC_ASSETS_URL=https://staging-assets.eduai.com

# Social/SEO
VITE_SITE_URL=https://staging.eduai.com
VITE_SOCIAL_IMAGE=https://staging.eduai.com/og-image.png
VITE_TWITTER_HANDLE=@eduai

# Monitoring
VITE_SENTRY_DSN=
VITE_GOOGLE_ANALYTICS_ID=
VITE_HOTJAR_ID=

# Debug
VITE_DEBUG_MODE=true
VITE_SHOW_DEBUG_INFO=true
